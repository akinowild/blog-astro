---
import { Image } from 'astro:assets';
import Logo from "../assets/img/logo.svg"

const { pathname } = Astro.url;

// 判断是否是当前栏目页 和 首页
const isActive = (path: string) => pathname.includes(path);
const isHome = ()=> pathname === "/";
---

<header class="header-area">
    <div class="container">
        <div class="header-wrap">
            <div class="header-top d-flex justify-content-between align-items-lg-center navbar-expand-lg">
                <div class="col menu-right">
                    <a class={isHome()?'active':''} href='/'  >首页</a>
                    <a class={isActive('/blog')?'active':''} href='/blog'>日志</a>
                    <a class={isActive('/photo')?'active':''} href='/photo'>相册</a>
                </div>
                <div class="col-5 text-lg-center mt-2 mt-lg-0">

                    <a  class="logo">
                        <span>秋</span>
                        <Image src={Logo} class="mx-auto" alt="A description of my image." />
                        <span>野</span>
                    </a>

                </div>
                <div class="col menu-left">
                    <a class={isActive('/demo')?'active':''} href='/demo'>一些Demo</a>
                    <a class={isActive('/guitar')?'active':''} href='/guitar'>谱子</a>
                    <a class={isActive('/me')?'active':''} href='/me'>猜</a>
                </div>
            </div>
        </div>
    </div>
</header>

<style>
    .logo{
        display: block;
        height: 40px;
        color: #000;
        line-height: 40px;
        background-image:linear-gradient(to top, transparent 48%,#000 50%,transparent 52%);

        background-size: 1px 100%;
    }
    .logo img{
        height: 100%;
        vertical-align:middle;
        padding:0 20px;
        margin:0;
        background: #fff;
    }
    .logo span{
        background: #fff;
        display: inline-block;
        padding: 0 10px;
        margin:0;
    }
    .menu-right a {
        margin-right: 26px;
        color: #000;
        font-size: 14px;
        font-family: "Playfair Display",serif;
        font-weight: 700;
        font-style: italic;
    }
    .active{
        border-bottom: 1px solid #000;
        padding: 0 0 10px;
    }
</style>