---
import { Image } from "astro:assets";
import Logo from "../assets/img/logo.svg";

const { pathname } = Astro.url;

// 判断是否是当前栏目页 和 首页
const isActive = (path: string) => pathname.includes(path);
const isHome = () => pathname === "/";
---

<div class="side-area">
    <div class="header-wrap">
        <a class="logo">
            <Image
                src={Logo}
                class="mx-auto"
                alt="A description of my image."
            />
            <span>秋野的意外</span>
        </a>
        <div class="header-top">
            <a class={isHome() ? "active" : ""} href="/">首页</a>
            <a class={isActive("/blog") ? "active" : ""} href="/blog"
                >日志</a
            >
            <a class={isActive("/photo") ? "active" : ""} href="/photo"
                >相册</a
            >
            <a class={isActive("/demo") ? "active" : ""} href="/demo"
                >一些Demo</a
            >
            <a class={isActive("/guitar") ? "active" : ""} href="/guitar"
                >谱子</a
            >
            <a class={isActive("/me") ? "active" : ""} href="/me">猜</a>
        </div>
    </div>
</div>

<style></style>
